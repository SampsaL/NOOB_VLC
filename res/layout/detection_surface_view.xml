<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <org.opencv.android.JavaCameraView
        android:id="@+id/detection_activity_surface_view"
        android:layout_width="800dp"
        android:layout_height="600dp"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="false"
        android:layout_alignParentEnd="false"
        android:layout_alignParentBottom="false"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        tools:visibility="visible" />
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/detection_activity_surface_view"
        android:layout_alignBottom="@+id/detection_activity_surface_view"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="120dp"
        android:layout_marginTop="355dp"
        android:layout_marginEnd="120dp"
        android:layout_marginBottom="-12dp"
        android:text=""
        android:textSize="18sp"
        android:textStyle="bold"
        tools:visibility="invisible" />
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignStart="@id/detection_activity_surface_view"
        android:layout_alignTop="@+id/detection_activity_surface_view"
        android:layout_alignEnd="@id/detection_activity_surface_view"
        android:layout_alignBottom="@id/detection_activity_surface_view"
        android:layout_marginStart="-14dp"
        android:layout_marginTop="-4dp"
        android:layout_marginEnd="-18dp"
        android:layout_marginBottom="-4dp"
        android:background="@mipmap/foreground"
        android:visibility="visible"
        app:srcCompat="@mipmap/foreground" />

    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="836dp"
        android:layout_height="421dp"
        android:layout_alignStart="@+id/imageView"
        android:layout_alignTop="@+id/imageView"
        android:layout_alignEnd="@+id/detection_activity_surface_view"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-14dp"
        android:layout_marginTop="-9dp"
        android:layout_marginEnd="-34dp"
        android:layout_marginBottom="-13dp"
        android:progress="0"
        android:progressDrawable="@drawable/circle"
        android:rotation="270"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imageView"
        android:layout_alignTop="@+id/imageView"
        android:layout_alignEnd="@+id/imageView"
        android:layout_alignBottom="@+id/detection_activity_surface_view"
        android:layout_marginStart="120dp"
        android:layout_marginTop="355dp"
        android:layout_marginEnd="120dp"
        android:layout_marginBottom="-12dp"
        android:text=""
        tools:visibility="visible" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="177dp"
        android:layout_height="78dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="570dp"
        android:layout_marginBottom="276dp"
        android:text="@string/eap_noob"
        android:textColor="@android:color/background_light"
        android:textSize="36sp"
        android:visibility="gone" />


</RelativeLayout>
